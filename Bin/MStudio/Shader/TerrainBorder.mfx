Pass
{
	State
	{
		CullMode NONE
		DepthMode LESS_EQUAL
		BlendMode OPACITY
	}
	
	Uniform
	{
		u_WVP WORLD_VIEW_PROJ_MATRIX
	}
	
	Attribute
	{
		i_Position POSITION
	}
	
	VertexShader {
		precision highp float;
		precision mediump int;

		uniform mat4 u_WVP;

		attribute vec4 i_Position;

		void main()
		{
			gl_Position = u_WVP * i_Position;
		}
	}
	
	PixelShader {
		precision highp float;
		precision mediump int;

		void main()
		{
			gl_FragColor = vec4(0, 1, 0, 1);
		}
	}
}
